{
  "name": "nexus-api",
  "private": true,
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "echo \"No test suite.\" && exit 0",
    "lint": "eslint --cache .",
    "format": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@prisma/client": "^5.0.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-session": "^6.4.0",
    "koa2-cors": "^2.0.6",
    "koa2-ratelimit": "^1.1.3",
    "resend": "^0.16.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-only-error": "^1.0.2",
    "eslint-plugin-unicorn": "^48.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.15",
    "prettier": "2.8",
    "prisma": "^5.0.0"
  },
  "volta": {
    "node": "18.14.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write .",
      "eslint --cache --fix ."
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "plugins": [
      "unicorn",
      "only-error"
    ],
    "rules": {
      "unicorn/no-null": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "allowList": {
            "ctx": true,
            "pkg": true,
            "req": true,
            "res": true
          }
        }
      ]
    }
  },
  "prettier": {
    "editorconfig": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  }
}
